<i class="fa fa-chevron-left fa-lg back left"> <%= link_to 'Back', home_index_path %></i>

<h1 class="entry-title center">Listing Priorities</h1>
<div class="col-lg-4 center-block">

  <table class="table">
    <thead>
      <tr >
        <th style="font-size: 16px;">Name</th>
        <th style="font-size: 16px;">Level</th>
        <th style="font-size: 16px;">Color</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @priorities.each do |priority| %>
        <tr  style="height: 50px;">
          <td style="font-size: 16px;"><%= priority.name %></td>
          <td style="font-size: 16px;"><%= priority.level %></td>
          <td class="field"> 
            <div class= "form-group string optional priority_color">
              <div class=" minicolors minicolors-theme-maria minicolors-position-bottom minicolors-position-left minicolors-focus">
                <span class="minicolors-swatch minicolors-sprite minicolors-input-swatch">
                  <span class="minicolors-swatch-color" style="background-color: #<%=priority.color%>;"></span>
                </span>
              </div>
            </div>
          </td>       
          <td style="font-size: 16px; color: #5DC1B9;"><%= link_to 'Edit', edit_priority_path(priority) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
